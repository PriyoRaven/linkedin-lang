{
  "manifest_version": 3,
  "name": "linkedin language",
  "description": "Translate any linkedin chat to any language of your choice using AI",
  "version": "0.0.1",
  "author": [
    {
      "name": "Priyadarsi Halder",
      "email": "priyadarsi02@gmail.com"
    }
  ],
  "permissions": [
    "activeTab", 
    "storage"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/testimg.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ]
}
